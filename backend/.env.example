# Frontend will call the backend at this base URL
VITE_API_BASE=http://localhost:4000/api/v1

# Server
PORT=4000

# Database (PostgreSQL + Prisma)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/campuslearn?schema=public"

# JWT auth
JWT_ACCESS_SECRET=dev_access_secret_change_me
JWT_REFRESH_SECRET=dev_refresh_secret_change_me

# CORS (frontend dev server origin)
